   "source": [
    "# Interactive DBSCAN Clustering\n",
    "This notebook provides an interactive exploration of DBSCAN clustering with different parameters and datasets."
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "import numpy as np\n",
    "import matplotlib.pyplot as plt\n",
    "from sklearn.cluster import DBSCAN, KMeans\n",
    "from sklearn.datasets import make_moons, make_circles, make_blobs\n",
    "from sklearn.preprocessing import StandardScaler\n",
    "from sklearn.neighbors import NearestNeighbors\n",
    "from sklearn.metrics import silhouette_score\n",
    "from ipywidgets import interact, FloatSlider, IntSlider, Dropdown\n",
    "from mpl_toolkits.mplot3d import Axes3D\n",
    "import warnings\n",
    "warnings.filterwarnings('ignore')"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "def generate_sample_data(dataset_name='Moons', n_samples=1000, noise=0.05):\n",
    "    \"\"\"Generate sample dataset based on the selected type.\"\"\"\n",
    "    if dataset_name == 'Moons':\n",
    "        X, _ = make_moons(n_samples=n_samples, noise=noise, random_state=42)\n",
    "    elif dataset_name == 'Circles':\n",
    "        X, _ = make_circles(n_samples=n_samples, factor=0.5, noise=noise, random_state=42)\n",
    "    elif dataset_name == 'Blobs with Noise':\n",
    "        X, _ = make_blobs(n_samples=n_samples, centers=3, cluster_std=[1.0, 2.5, 0.5], random_state=42)\n",
    "        X = np.vstack([X, np.random.uniform(low=-10, high=10, size=(n_samples//10, 2))])\n",
    "    elif dataset_name == '3D Clusters':\n",
    "        X, _ = make_blobs(n_samples=n_samples, n_features=3, centers=4, cluster_std=1.5, random_state=42)\n",
    "    \n",
    "    # Standardize features\n",
    "    X = StandardScaler().fit_transform(X)\n",
    "    return X\n",
    "\n",
    "def plot_clusters(X, y_pred, title, ax=None):\n",
    "    \"\"\"Plot clustering results with noise points in black.\"\"\"\n",
    "    if ax is None:\n",
    "        fig, ax = plt.subplots(figsize=(8, 6))\n",
    "    \n",
    "    # Plot noise points first (label = -1)\n",
    "    noise_mask = (y_pred == -1)\n",
    "    if np.any(noise_mask):\n",
    "        ax.scatter(X[noise_mask, 0], X[noise_mask, 1], \n",
    "                  c='black', marker='x', alpha=0.5, label='Noise')\n",
    "    \n",
    "    # Plot clusters\n",
    "    for cluster_id in np.unique(y_pred[y_pred != -1]):\n",
    "        cluster_mask = (y_pred == cluster_id)\n",
    "        ax.scatter(X[cluster_mask, 0], X[cluster_mask, 1], \n",
    "                  label=f'Cluster {cluster_id}', alpha=0.7)\n",
    "    \n",
    "    ax.set_title(title)\n",
    "    ax.set_xlabel('Feature 1')\n",
    "    ax.set_ylabel('Feature 2')\n",
    "    ax.legend()\n",
    "    ax.grid(True, alpha=0.3)\n",
    "    plt.tight_layout()\n",
    "    return ax\n",
    "\n",
    "def plot_3d_clusters(X, y_pred, title):\n",
    "    \"\"\"3D visualization of clustering results.\"\"\"\n",
    "    fig = plt.figure(figsize=(10, 8))\n",
    "    ax = fig.add_subplot(111, projection='3d')\n",
    "    \n",
    "    # Plot noise points first (label = -1)\n",
    "    noise_mask = (y_pred == -1)\n",
    "    if np.any(noise_mask):\n",
    "        ax.scatter(X[noise_mask, 0], X[noise_mask, 1], X[noise_mask, 2], \n",
    "                  c='black', marker='x', alpha=0.5, label='Noise')\n",
    "    \n",
    "    # Plot clusters\n",
    "    for cluster_id in np.unique(y_pred[y_pred != -1]):\n",
    "        cluster_mask = (y_pred == cluster_id)\n",
    "        ax.scatter(X[cluster_mask, 0], X[cluster_mask, 1], X[cluster_mask, 2], \n",
    "                  label=f'Cluster {cluster_id}', alpha=0.7)\n",
    "    \n",
    "    ax.set_title(title)\n",
    "    ax.set_xlabel('Feature 1')\n",
    "    ax.set_ylabel('Feature 2')\n",
    "    ax.set_zlabel('Feature 3')\n",
    "    ax.legend()\n",
    "    plt.tight_layout()\n",
    "    plt.show()\n",
    "\n",
    "def plot_k_distance(X, min_samples=5, ax=None):\n",
    "    \"\"\"Plot k-distance graph to help choose epsilon.\"\"\"\n",
    "    if ax is None:\n",
    "        fig, ax = plt.subplots(figsize=(8, 4))\n",
    "    \n",
    "    # Calculate distances to k nearest neighbors\n",
    "    neighbors = NearestNeighbors(n_neighbors=min_samples + 1)\n",
    "    neighbors_fit = neighbors.fit(X)\n",
    "    distances, _ = neighbors_fit.kneighbors(X)\n",
    "    \n",
    "    # Sort distances\n",
    "    distances = np.sort(distances[:, -1])\n",
    "    \n",
    "    # Plot k-distance graph\n",
    "    ax.plot(distances, 'b-', label=f'{min_samples}-NN distance')\n",
    "    ax.set_title(f'k-Distance Graph (k={min_samples})')\n",
    "    ax.set_xlabel('Points sorted by distance')\n",
    "    ax.set_ylabel(f'{min_samples}-NN distance')\n",
    "    ax.legend()\n",
    "    ax.grid(True, alpha=0.3)\n",
    "    plt.tight_layout()\n",
    "    return ax\n",
    "\n",
    "def interactive_dbscan(dataset_name, n_samples, noise, eps, min_samples, show_k_distance=True):\n",
    "    \"\"\"Interactive DBSCAN clustering visualization.\"\"\"\n",
    "    # Generate data\n",
    "    X = generate_sample_data(dataset_name, n_samples, noise)\n",
    "    \n",
    "    # Apply DBSCAN\n",
    "    dbscan = DBSCAN(eps=eps, min_samples=min_samples)\n",
    "    y_pred = dbscan.fit_predict(X)\n",
    "    \n",
    "    # Calculate metrics\n",
    "    n_clusters = len(np.unique(y_pred[y_pred != -1]))\n",
    "    n_noise = np.sum(y_pred == -1)\n",
    "    \n",
    "    # Calculate silhouette score (excluding noise points)\n",
    "    if n_clusters > 1 and np.any(y_pred != -1):\n",
    "        mask = (y_pred != -1)\n",
    "        if len(np.unique(y_pred[mask])) > 1:  # Need at least 2 clusters\n",
    "            score = silhouette_score(X[mask], y_pred[mask])\n",
    "        else:\n",
    "            score = -1\n",
    "    else:\n",
    "        score = -1\n",
    "    \n",
    "    # Create subplots\n",
    "    fig = plt.figure(figsize=(15, 6))\n",
    "    \n",
    "    # Plot original data\n",
    "    ax1 = fig.add_subplot(121)\n",
    "    ax1.scatter(X[:, 0], X[:, 1], c='blue', alpha=0.5)\n",
    "    ax1.set_title('Original Data')\n",
    "    ax1.grid(True, alpha=0.3)\n",
    "    \n",
    "    # Plot clustering results\n",
    "    ax2 = fig.add_subplot(122)\n",
    "    plot_clusters(X, y_pred, \n",
    "                 f'DBSCAN: {n_clusters} clusters, {n_noise} noise points\\n'\n",
    "                 f'eps={eps}, min_samples={min_samples}\\n'\n",
    "                 f'Silhouette: {score:.3f if score != -1 else "N/A"}',\n",
    "                 ax=ax2)\n",
    "    \n",
    "    plt.tight_layout()\n",
    "    plt.show()\n",
    "    \n",
    "    # Show k-distance graph if requested\n",
    "    if show_k_distance and X.shape[1] <= 2:  # Only for 2D data\n",
    "        plot_k_distance(X, min_samples)\n",
    "        plt.show()\n",
    "    \n",
    "    # Show 3D visualization if using 3D data\n",
    "    if X.shape[1] == 3:\n",
    "        plot_3d_clusters(X, y_pred, 'DBSCAN 3D Clustering')\n",
    "        plt.show()"
   ]
  },
